---
import YoutubePlayer from '@components/YoutubePlayer.astro'

interface Props {
  videoId: string
}

const { videoId } = Astro.props
---

<div class="w-full bg-rgbaBGLight dark:bg-rgbaBGDark theBorder h-full flex items-center justify-center group-[.theater]:border-[0px]">
  <YoutubePlayer class="w-full h-full justify-center items-center" progressInterval={100} videoId={videoId} embedParams={{ autoplay: 1, enablejsapi: 1, hl: Astro.currentLocale || 'en', rel: 0, cc_load_policy: 0, cc_lang_pref: '0', iv_load_policy: '3' }} />
</div>

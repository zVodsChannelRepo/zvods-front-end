---
import { languageTag } from "@paraglide/runtime";
const currentLang = languageTag();
---

<li
  class="group list-none relative dropdown cursor-pointer font-bold iconButtonDefault"
>
  <button id="toggleLanguage" data-current-lang={currentLang} class="uppercase textDefault text-xs">{languageTag()}</button>
</li>

<script>
  function changeLanguage(newLang: string) {
    const url = new URL(window.location.href);
    const pathSegments = url.pathname.split("/");
    pathSegments.length > 1
      ? (pathSegments[1] = newLang)
      : pathSegments.push(newLang);

    url.pathname = pathSegments.join("/");
    if (url.toString() !== window.location.toString()) {
      localStorage.setItem("lang", newLang);
      window.location.replace(url.toString());
    }
  }

  document.querySelectorAll("#toggleLanguage").forEach((el) => {
    el.addEventListener("click", (e) => {
      const $btn = e.target as HTMLButtonElement;
      const currentLang = $btn.dataset?.currentLang;
      const targetLang = currentLang == 'en' ? 'pt' : 'en'
      if (
        currentLang &&
        targetLang &&
        targetLang &&
        targetLang !== currentLang
      ) {
        changeLanguage(targetLang);
      }
    });
  });
</script>
